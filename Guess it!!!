# Import random library to pick random words
import random

# Import nltk library for working with words
import nltk
nltk.download("words")  # Download the word list (only needed first time)

# Import the words list from nltk
from nltk.corpus import words


def word_guessing_game():
    """
    A simple word guessing game (like Hangman).
    The computer picks a word, and you try to guess it letter by letter.
    """

    # Pick a random word longer than 3 letters and make it lowercase
    secret_word = random.choice([w for w in words.words() if len(w) > 3]).lower()

    # Keep track of letters you have guessed
    guessed_letters = set()

    # You have 6 wrong attempts
    attempts = 6

    print("🎮 Welcome to Guess it!!!")
    print("Try to guess the word, one letter at a time.")

    # Keep playing until you run out of attempts or guess the word
    while attempts > 0:
        # Show the word with guessed letters, others as "_"
        display_word = "".join([letter if letter in guessed_letters else "_" for letter in secret_word])
        print("\nWord:", display_word)
        print("Attempts left:", attempts)

        # If no "_" left, you guessed the word
        if "_" not in display_word:
            print("🎉 Congratulations! You guessed the word:", secret_word)
            break

        # Ask for a letter
        guess = input("Enter a letter: ").lower()

        # Check if input is valid (one letter only)
        if len(guess) != 1 or not guess.isalpha():
            print("⚠️ Please enter a single letter.")
            continue  # Ask again

        # Check if letter was already guessed
        if guess in guessed_letters:
            print("❌ You already guessed that letter.")
            continue  # Ask again

        # Add the letter to guessed letters
        guessed_letters.add(guess)

        # Check if the letter is in the word
        if guess not in secret_word:
            print("❌ Wrong guess!")
            attempts -= 1  # Lose one attempt
        else:
            print("✅ Good guess!")

    # If no attempts left, game over
    if attempts == 0:
        print("\n💀 Game Over! The word was:", secret_word)


# Start the game when running this file
word_guessing_game()
